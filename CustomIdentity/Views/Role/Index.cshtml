@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>

<div class="row">
    <div class="col-6">
        <h2>Roles</h2>
    </div>
    <div class="col-6">
        <a asp-action="Create" asp-controller="Role" class="btn btn-success" style="float:right;">Create Role</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model !=null){
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-info">Edit</a> |
                        @*<a asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>*@
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@role.Id" 
                        onsubmit="return confirm('Are you sure you want to delete this role?');" >
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }else{
           <tr><td>
               No data to show
           </td></tr>
        }

    </tbody>
</table>
