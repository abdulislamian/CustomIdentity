@inject Microsoft.AspNetCore.Identity.SignInManager<CustomIdentity.Data.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hello, @User.Identity.Name!
        </button>
        <div class="dropdown-menu" aria-labelledby="userDropdown">
            <a class="dropdown-item" asp-action="ChangePassword" 
            asp-controller="Account" asp-route-id="@User.Identity.Name">Change Password</a>
        </div>
    </div>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Sign Up","Register","Account",routeValues:null,htmlAttributes:new {id="registerLink"})*@
            <a id="registerLink" class="nav-link"  asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li><a id="loginLink" class="nav-link" asp-action="Login" asp-controller="Account">Login</a></li>
    </ul>
}